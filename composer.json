{
    "name": "flyo/nitro-yii2",
    "description": "Flyo Nitro Yii2 Framework Module",
    "type": "yii2-extension",
    "require": {
        "php": ">=8.3",
        "flyo/nitro-php": "^2.0",
        "yiisoft/yii2": "^2.0.54",
        "flyo/nitro-php-bridge": "^1.1"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.2",
        "phpstan/phpstan": "^1.7",
        "phpunit/phpunit": "^11.0"
    },
    "scripts": {
        "phpstan": "vendor/bin/phpstan -v",
        "phpcsfixer": "vendor/bin/php-cs-fixer fix",
        "phpunit": "vendor/bin/phpunit tests/",
        "prepare": [
            "@phpcsfixer",
            "@phpstan",
            "@phpunit"
        ]
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Flyo\\Yii\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Flyo\\Yii\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Basil Suter",
            "email": "git@nadar.io"
        }
    ],
    "config": {
        "process-timeout": 0,
        "platform": {
            "php": "8.5"
        },
        "fxp-asset": {
            "enabled": false
        },
        "allow-plugins": {
            "yiisoft/yii2-composer": true,
            "php-http/discovery": true
        }
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    ]
}